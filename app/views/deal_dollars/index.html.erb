<head>
	<script> var lost = <%= @lost %></script>
	<script> var qualified = <%= @qualified %></script>
	<script> var request_for_info = <%= @request_for_info %></script>
	<script> var presentation = <%= @presentation %></script>
	<script> var negotiation = <%= @negotiation %></script>
	<script> var won = <%= @won %></script>
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<script type="text/javascript">
      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {

        // Create the data table.
        var data = new google.visualization.DataTable();
        // var model = <%= d = DealDollar.new %>;
        // var lost = <%= d.instance_eval {lost_deals_value} %>
        data.addColumn('string', 'Deal Stage');
        data.addColumn('number', 'Total Value in $');
       
        data.addRows([
          ['Lost (0%)', lost],
          ['Qualified (10%)', qualified],
          ['Request for Info (25%)', request_for_info],
          ['Presentation (50%)', presentation],
          ['Negotiation (75%)', negotiation],
          ['Won (100%)', won]
        ]);

        // Set chart options
        var options = {'title':'',
                       'width':1200,
                       'height':600};

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
  </head>

  <body>
  	<h1>Deal Dollars</h1>
    <!--Div that will hold the chart-->
    <div id="chart_div"></div>
  </body>
